pipeline {
    agent any

    environment {
        NETLIFY_SITE_ID = 'edeef102-0bd2-44fd-bef9-7a878cf0badd'
        NETLIFY_AUTH_TOKEN = credentials('netlify-token')
        REACT_APP_VERSION = "1.0.$BUILD_ID"
    }

    stages {

        stage('Build Docker image') {
            steps {
               sh 'docker build -f ci/Dockerfile -t my-playwright .'
            }
        }
    }
}